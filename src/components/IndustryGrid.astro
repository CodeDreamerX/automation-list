---
import IndustryCard from "./IndustryCard.astro";

interface Industry {
  slug: string;
  name: string;
  description?: string;
}

interface Props {
  title?: string;
  description?: string;
  industries: Industry[];
  lang?: string;
  headingLevel?: "h1" | "h2";
}

const {
  title = "Browse by Industry",
  description,
  industries,
  lang = "en",
  headingLevel = "h2",
} = Astro.props;
---

{industries.length > 0 && (
  <section class="fade-in-up container-px mx-auto max-w-7xl px-4 py-16 md:py-20">
    {headingLevel === "h1" ? (
      <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6 md:mb-10 text-center">{title}</h1>
    ) : (
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6 md:mb-10 text-center">{title}</h2>
    )}
    {description && (
      <p class="text-lg md:text-xl text-gray-600 mb-6 md:mb-10 text-center max-w-3xl mx-auto">{description}</p>
    )}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {industries.map((industry, i) => (
        <IndustryCard industry={industry} lang={lang} index={i} />
      ))}
    </div>
  </section>
)}




