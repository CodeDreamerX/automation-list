---
interface Props {
  logos?: Array<{ name: string; logo?: string }>;
  trustedByText?: string;
}

const {
  logos = [
    { name: "Company 1" },
    { name: "Company 2" },
    { name: "Company 3" },
    { name: "Company 4" },
    { name: "Company 5" },
    { name: "Company 6" },
  ],
  trustedByText = "Trusted by teams from leading companies",
} = Astro.props;
---

<section class="py-12 bg-white border-y border-gray-200">
  <div class="container-px mx-auto max-w-7xl">
    <p class="text-sm font-medium text-gray-500 text-center mb-8">
      {trustedByText}
    </p>
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12 opacity-60">
      {logos.map((logo) => (
        <div class="flex items-center justify-center h-12">
          {logo.logo ? (
            <img src={logo.logo} alt={logo.name} class="h-8 max-w-[120px] object-contain" />
          ) : (
            <div class="h-8 w-24 bg-gray-200 rounded flex items-center justify-center">
              <span class="text-xs text-gray-400">{logo.name}</span>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

