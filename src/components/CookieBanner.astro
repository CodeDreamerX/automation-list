---
// Cookie Consent Banner Component
// Shows only if no consent decision exists
---

<div id="cookie-banner" class="cookie-banner hidden">
  <div class="cookie-banner-content">
    <p class="cookie-banner-text">
      We use cookies to analyze site usage. You can accept or reject analytics cookies.
    </p>
    <div class="cookie-banner-buttons">
      <button id="cookie-accept" class="cookie-button cookie-button-accept">
        Accept
      </button>
      <button id="cookie-reject" class="cookie-button cookie-button-reject">
        Reject
      </button>
    </div>
  </div>
</div>

<script>
  import { setConsent } from "../lib/cookieConsent";

  const CONSENT_KEY = "cookie_consent";

  // Check if consent decision exists
  function hasConsentDecision(): boolean {
    if (typeof window === "undefined") {
      return true; // Hide on server
    }

    try {
      const consent = localStorage.getItem(CONSENT_KEY);
      return consent !== null; // Decision exists if key is present
    } catch (error) {
      return true; // Hide if localStorage unavailable
    }
  }

  // Show banner only if no decision exists
  function initBanner() {
    const banner = document.getElementById("cookie-banner");
    if (!banner) {
      return; // Banner not found
    }

    if (hasConsentDecision()) {
      banner.classList.add("hidden");
      return; // Hide banner if decision already made
    }

    // Show banner if no decision exists
    banner.classList.remove("hidden");
  }

  // Handle accept
  function handleAccept() {
    setConsent("accepted");
    const banner = document.getElementById("cookie-banner");
    if (banner) {
      banner.classList.add("hidden");
    }
  }

  // Handle reject
  function handleReject() {
    setConsent("rejected");
    const banner = document.getElementById("cookie-banner");
    if (banner) {
      banner.classList.add("hidden");
    }
  }

  // Initialize on DOM ready
  if (typeof window !== "undefined") {
    // Wait for DOM to be fully loaded
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", () => {
        initBanner();
        
        const acceptButton = document.getElementById("cookie-accept");
        const rejectButton = document.getElementById("cookie-reject");
        
        acceptButton?.addEventListener("click", handleAccept);
        rejectButton?.addEventListener("click", handleReject);
      });
    } else {
      // DOM already loaded
      initBanner();
      
      const acceptButton = document.getElementById("cookie-accept");
      const rejectButton = document.getElementById("cookie-reject");
      
      acceptButton?.addEventListener("click", handleAccept);
      rejectButton?.addEventListener("click", handleReject);
    }
  }
</script>

<style>
  .cookie-banner {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    border-top: 1px solid #e5e7eb;
    box-shadow: 0 -4px 6px -1px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    padding: 1rem;
  }

  .cookie-banner.hidden {
    display: none;
  }

  .cookie-banner-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .cookie-banner-text {
    flex: 1;
    min-width: 200px;
    margin: 0;
    font-size: 0.875rem;
    color: #374151;
    line-height: 1.5;
  }

  .cookie-banner-buttons {
    display: flex;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  .cookie-button {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .cookie-button-accept {
    background: #f97316;
    color: white;
    border-color: #f97316;
  }

  .cookie-button-accept:hover {
    background: #ea580c;
    border-color: #ea580c;
  }

  .cookie-button-reject {
    background: white;
    color: #374151;
  }

  .cookie-button-reject:hover {
    background: #f9fafb;
  }

  @media (max-width: 640px) {
    .cookie-banner-content {
      flex-direction: column;
      align-items: stretch;
    }

    .cookie-banner-buttons {
      width: 100%;
    }

    .cookie-button {
      flex: 1;
    }
  }
</style>







