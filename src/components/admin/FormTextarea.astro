---
interface Props {
  id: string;
  name: string;
  label: string;
  value?: string;
  rows?: number;
  required?: boolean;
  helpText?: string;
  class?: string;
}

const {
  id,
  name,
  label,
  value = '',
  rows = 5,
  required = false,
  helpText,
  class: className = '',
} = Astro.props;

const textareaClasses = `border border-gray-300 rounded-md px-3 py-2 w-full text-sm mb-4 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent ${className}`;
---

<div>
  <label for={id} class="block text-sm font-medium text-gray-700 mb-1">
    {label} {required && <span class="text-red-500">*</span>}
  </label>
  <textarea
    id={id}
    name={name}
    rows={rows}
    required={required}
    class={textareaClasses}
  >{value}</textarea>
  {helpText && (
    <p class="text-xs text-gray-500 mt-1">{helpText}</p>
  )}
</div>

