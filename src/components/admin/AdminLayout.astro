---
import '../../styles/globals.css';

interface AdminLayoutProps {
  title?: string;
  currentPath?: string;
}

const { title = "Admin Panel - Automation List", currentPath = "/admin" } = Astro.props;

// Check if user is authenticated (set by middleware via Supabase Auth + user_roles)
const isAuthenticated = Astro.locals.isAdmin === true;

const navItems = [
  { label: "Vendor Management", href: "/admin", active: currentPath === "/admin" },
  { label: "Category Management", href: "/admin/categories", active: currentPath === "/admin/categories" || currentPath?.startsWith("/admin/categories/") },
  { label: "Technology Management", href: "/admin/technologies", active: currentPath === "/admin/technologies" || currentPath?.startsWith("/admin/technologies/") },
  { label: "Industry Management", href: "/admin/industries", active: currentPath === "/admin/industries" || currentPath?.startsWith("/admin/industries/") },
];

// Import section - only show if authenticated
const importItems = isAuthenticated ? [
  { label: "Import", href: "/admin/vendors/csv", active: currentPath?.startsWith("/admin/vendors/csv") }
] : [];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Admin panel for Automation List" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <div class="flex h-screen">
      <!-- LEFT SIDEBAR -->
      <aside class="w-64 bg-gray-900 text-white flex flex-col">
        <div class="p-6 border-b border-gray-800">
          <h1 class="text-xl font-bold">Admin Panel</h1>
        </div>
        
        <nav class="flex-1 p-4">
          <ul class="space-y-2">
            {navItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class={`block px-4 py-2 rounded-md transition-colors ${
                    item.active
                      ? 'bg-gray-800 text-white'
                      : 'text-gray-300 hover:bg-gray-800 hover:text-white'
                  }`}
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
          
          {importItems.length > 0 && (
            <>
              <div class="my-4 border-t border-gray-700"></div>
              <div class="mb-2 px-4 py-1">
                <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Import</span>
              </div>
              <ul class="space-y-2">
                {importItems.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class={`block px-4 py-2 rounded-md transition-colors ${
                        item.active
                          ? 'bg-gray-800 text-white'
                          : 'text-gray-300 hover:bg-gray-800 hover:text-white'
                      }`}
                    >
                      {item.label}
                    </a>
                  </li>
                ))}
              </ul>
            </>
          )}
        </nav>
        
        <div class="p-4 border-t border-gray-800">
          <a
            href="/admin?logout=true"
            class="block px-4 py-2 text-gray-300 hover:bg-gray-800 hover:text-white rounded-md transition-colors text-sm"
          >
            Logout
          </a>
        </div>
      </aside>

      <!-- MAIN CONTENT AREA -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- TOP BAR -->
        <header class="bg-white border-b border-gray-200 px-6 py-4">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-900">
              {currentPath === "/admin/categories" || currentPath?.startsWith("/admin/categories/") ? "Category Management" : currentPath === "/admin/technologies" || currentPath?.startsWith("/admin/technologies/") ? "Technology Management" : currentPath === "/admin/industries" || currentPath?.startsWith("/admin/industries/") ? "Industry Management" : "Vendor Management"}
            </h2>
            <div class="flex items-center gap-4">
              <span class="text-sm text-gray-600">Admin</span>
              <a href="/api/admin/logout" class="text-sm text-red-500 hover:underline">Logout</a>
            </div>
          </div>
        </header>

        <!-- MAIN CONTENT -->
        <main class="flex-1 overflow-y-auto p-6">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>

