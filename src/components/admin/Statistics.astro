---
interface Props {
  rowCount: number;
  totalRowsWithErrors: number;
  totalRowsWithWarnings: number;
  unknownColumnsWarning: string[];
}

const { rowCount, totalRowsWithErrors, totalRowsWithWarnings, unknownColumnsWarning } = Astro.props;
---

<div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
  <h2 class="text-xl font-semibold text-gray-900 mb-4">CSV Preview Statistics</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-white p-3 rounded border border-gray-200">
      <div class="text-sm text-gray-600">Total Rows Parsed</div>
      <div class="text-2xl font-bold text-gray-900">{rowCount}</div>
    </div>
    <div class="bg-white p-3 rounded border border-gray-200">
      <div class="text-sm text-gray-600">Rows with Errors</div>
      <div class="text-2xl font-bold text-red-600">{totalRowsWithErrors}</div>
    </div>
    <div class="bg-white p-3 rounded border border-gray-200">
      <div class="text-sm text-gray-600">Rows with Warnings</div>
      <div class="text-2xl font-bold text-yellow-600">{totalRowsWithWarnings}</div>
    </div>
  </div>

  {/* Unknown Columns Warning */}
  {unknownColumnsWarning.length > 0 && (
    <div class="mt-4 p-4 bg-yellow-50 border border-yellow-300 rounded-md">
      <div class="flex items-center gap-2 mb-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
          Warning
        </span>
        <span class="font-semibold text-yellow-900">Unknown Columns</span>
      </div>
      <p class="text-sm text-yellow-800">
        The following columns were found in the CSV but are not part of the schema and will be ignored: <strong>{unknownColumnsWarning.join(', ')}</strong>
      </p>
    </div>
  )}
</div>

