---
interface FormInputProps {
  id: string;
  name: string;
  label: string;
  type?: string;
  value?: string;
  placeholder?: string;
  required?: boolean;
  helpText?: string;
  min?: string;
  max?: string;
  class?: string;
}

const {
  id,
  name,
  label,
  type = 'text',
  value = '',
  placeholder,
  required = false,
  helpText,
  min,
  max,
  class: className = '',
} = Astro.props;

const inputClasses = `border border-gray-300 rounded-md px-3 py-2 w-full text-sm mb-4 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent ${className}`;
---

<div>
  <label for={id} class="block text-sm font-medium text-gray-700 mb-1">
    {label} {required && <span class="text-red-500">*</span>}
  </label>
  <input
    type={type}
    id={id}
    name={name}
    value={value}
    placeholder={placeholder}
    required={required}
    min={min}
    max={max}
    class={inputClasses}
  />
  {helpText && (
    <p class="text-xs text-gray-500 mt-1">{helpText}</p>
  )}
</div>

