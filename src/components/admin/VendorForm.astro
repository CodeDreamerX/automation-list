---
interface Props {
  vendor: any;
  categories?: Array<{
    id: string;
    slug: string;
    name_en: string;
    name_de: string;
  }>;
}

const { vendor, categories = [] } = Astro.props;
const isNewVendor = !vendor || !vendor.id;

// Extract selected category IDs from vendor_categories for edit mode
const selectedCategoryIds = new Set<string>();
let primaryCategoryId: string | null = null;
if (!isNewVendor && vendor?.vendor_categories) {
  vendor.vendor_categories.forEach((vc: any) => {
    if (vc.categories?.id) {
      selectedCategoryIds.add(vc.categories.id);
      if (vc.is_primary === true) {
        primaryCategoryId = vc.categories.id;
      }
    }
  });
}
---

