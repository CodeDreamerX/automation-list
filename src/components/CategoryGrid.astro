---
import type { CategoryBasic } from '../types/category';
import CategoryCard from "./CategoryCard.astro";

interface CategoryGridProps {
  title?: string;
  description?: string;
  categories: CategoryBasic[];
  lang?: string;
  headingLevel?: "h1" | "h2";
}

const {
  title = "Browse by Category",
  description,
  categories,
  lang = "en",
  headingLevel = "h2",
} = Astro.props;
---

<section class="fade-in-up container-px mx-auto max-w-7xl px-4 py-16 md:py-20">
  {headingLevel === "h1" ? (
    <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6 md:mb-10 text-center">{title}</h1>
  ) : (
    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6 md:mb-10 text-center">{title}</h2>
  )}
  {description && (
    <p class="text-lg md:text-xl text-gray-600 mb-6 md:mb-10 text-center max-w-3xl mx-auto">{description}</p>
  )}
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {categories.map((category, i) => (
      <CategoryCard category={category} lang={lang} index={i} />
    ))}
  </div>
</section>

