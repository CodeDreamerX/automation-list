<section class="fade-in-up container-px mx-auto max-w-7xl px-4 py-16 md:py-20">
  <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6 md:mb-10 text-center">{title}</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {categories.map((category, i) => (
      <a
        href={category.href}
        class="fade-in-up border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition block"
        style={`animation-delay: ${i * 0.05}s`}
      >
        <div class="flex justify-center mb-4 text-gray-700" set:html={iconMap[category.name] || ""} />
        <h3 class="text-lg font-semibold text-gray-900 mb-1">{category.name}</h3>
        <p class="text-sm text-gray-600">{category.description}</p>
      </a>
    ))}
  </div>
</section>

