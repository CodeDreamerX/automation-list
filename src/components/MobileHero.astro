---
interface Props {
  title: string;
  description: string;
  primaryButtonText: string;
  primaryButtonHref: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  secondaryMicroCopy?: string;
}

const {
  title,
  description,
  primaryButtonText,
  primaryButtonHref,
  secondaryButtonText,
  secondaryButtonHref,
  secondaryMicroCopy,
} = Astro.props;
---

<section 
  class="fade-in-up-slow container-px mx-auto max-w-7xl px-4 pt-8 pb-4"
  role="banner"
  aria-label="Hero section"
>
  <div class="max-w-full mx-auto text-center">
    <h1 class="text-3xl font-bold text-gray-900 text-center mb-3 leading-tight">
      {title}
    </h1>

    <p class="text-base text-gray-600 text-center mx-auto mb-6 leading-relaxed">
      {description}
    </p>

    <div class="flex flex-col gap-3 mb-4">
      <a 
        href={primaryButtonHref}
        class="w-full px-6 py-3 bg-black text-white rounded-md text-sm font-medium hover:bg-gray-900 transition text-center"
        aria-label={primaryButtonText}
      >
        {primaryButtonText}
      </a>
      {secondaryButtonText && secondaryButtonHref && (
        <div class="flex flex-col items-center">
          <a 
            href={secondaryButtonHref}
            class="w-full px-6 py-3 border border-gray-300 text-gray-800 rounded-md text-sm font-medium hover:bg-gray-50 transition text-center"
            aria-label={secondaryButtonText}
          >
            {secondaryButtonText}
          </a>
          {secondaryMicroCopy && (
            <p class="text-xs text-gray-500 mt-1.5" role="note">
              {secondaryMicroCopy}
            </p>
          )}
        </div>
      )}
    </div>
  </div>
</section>

