---
interface Props {
  title?: string;
  description?: string;
  benefits?: string[];
}

const {
  title = "Why This Directory?",
  description = "Automation-List is a vendor-neutral directory built by automation engineers. No sponsored rankings, no agencies manipulating results — just clean, structured data.",
  benefits = [
    "Vendor-neutral and unbiased",
    "Built by automation professionals",
    "Clear categories and technology mapping",
    "Global coverage",
    "Always evolving",
  ],
} = Astro.props;
---

<section class="fade-in-up container-px mx-auto max-w-7xl px-4 py-16 md:py-20 border-t border-gray-200 mt-8 pt-8">
  <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6 md:mb-10 text-center">{title}</h2>

  <p class="text-gray-700 text-center max-w-2xl mx-auto mb-8">
    {description}
  </p>

  <ul class="space-y-3 text-gray-700 max-w-xl mx-auto">
    {benefits.map((benefit) => (
      <li>✓ {benefit}</li>
    ))}
  </ul>
</section>

