---
type Benefit = {
  title: string;
  description: string;
  accent?: "brand" | "orange";
};

interface BenefitsProps {
  benefits?: Benefit[];
}

const {
  benefits = [
    {
      title: "Vendor-neutral coverage",
      description: "Comprehensive listings without bias toward any single vendor or brand. Get fair comparisons and independent insights for informed decisions.",
      accent: "brand",
    },
    {
      title: "Smart filtering",
      description: "Filter by protocols, industry, and technical specifications. Find exactly what you need with precision search capabilities.",
      accent: "brand",
    },
    {
      title: "Verified profiles",
      description: "All companies and products are verified for accuracy. Trust the information you find in our directory.",
      accent: "orange",
    },
  ],
} = Astro.props;
---
<section id="benefits" class="py-16 md:py-24 bg-white">
  <div class="container-px mx-auto max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">Benefits</h2>
      <div class="mx-auto w-16 h-1 bg-orange-500 rounded-full"></div>
    </div>
    <div class="grid md:grid-cols-3 gap-8">
      {benefits.map((benefit: Benefit, index: number) => {
        const accent = benefit.accent ?? "brand";
        const isOrange = accent === "orange";

        return (
          <div class={`card card-bubble hover:shadow-lg hover:-translate-y-1 transition-all duration-300 ${isOrange ? 'card-bubble--orange' : ''}`}>
            <div class={`mb-4 h-12 w-12 ${isOrange ? 'bg-orange-100' : 'bg-brand-100'} rounded-lg flex items-center justify-center`}>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {benefit.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">
              {benefit.description}
            </p>
          </div>
        );
      })}
    </div>
  </div>
</section>

