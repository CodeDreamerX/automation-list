---
interface PageHeroProps {
  title: string;
  description: string;
  primaryButtonText: string;
  primaryButtonHref: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  secondaryMicroCopy?: string;
  vendorCount?: number | null;
  vendorCountLabel?: string;
}

const {
  title,
  description,
  primaryButtonText,
  primaryButtonHref,
  secondaryButtonText,
  secondaryButtonHref,
  secondaryMicroCopy,
  vendorCount,
  vendorCountLabel,
} = Astro.props;
---

<section class="fade-in-up-slow container-px mx-auto max-w-7xl px-4 pt-12 md:pt-16 pb-0">
  <div class="max-w-3xl mx-auto text-center">
    <h1 class="text-2xl leading-tight font-semibold md:text-4xl md:font-bold text-gray-900 text-center mb-4">
      {title}
    </h1>

    <p class="text-base leading-relaxed font-normal text-gray-600 md:text-lg text-center max-w-2xl mx-auto mb-8">
      {description}
    </p>

    {vendorCount !== null && vendorCount !== undefined && vendorCountLabel && (
      <div class="mt-4 mb-6 text-sm text-gray-500 text-center">
        <span class="font-medium text-gray-600">
          {vendorCount}
        </span>
        {" "}{vendorCountLabel}
      </div>
    )}

    <div class="flex justify-center gap-4 mb-6 flex-wrap items-start">
      <a 
        href={primaryButtonHref} 
        class="px-6 py-3 bg-black text-white rounded-md text-sm font-medium hover:bg-gray-900 transition"
      >
        {primaryButtonText}
      </a>
      {secondaryButtonText && secondaryButtonHref && (
        <div class="flex flex-col items-center">
          <a 
            href={secondaryButtonHref} 
            class="px-6 py-3 border border-gray-300 text-gray-800 rounded-md text-sm font-medium hover:bg-gray-50 transition"
          >
            {secondaryButtonText}
          </a>
          {secondaryMicroCopy && (
            <p class="text-xs text-gray-500 mt-2">{secondaryMicroCopy}</p>
          )}
        </div>
      )}
    </div>
  </div>
</section>

