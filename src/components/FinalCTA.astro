---
interface Props {
  title?: string;
  description?: string;
  browseCategoriesText?: string;
  submitCompanyText?: string;
}

const {
  title = "Independent, Transparent, Unbiased",
  description = "No pay-to-rank. No vendor bias. Just transparent categories and independent information to help you make the right choice.",
  browseCategoriesText = "Browse Categories",
  submitCompanyText = "Submit Your Company",
} = Astro.props;
---
<section id="final-cta" class="py-16 md:py-24 bg-gradient-to-b from-gray-900 to-gray-800">
  <div class="container-px mx-auto max-w-4xl text-center">
    <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
      {title}
    </h2>
    <p class="text-lg md:text-xl text-gray-300 mb-8">
      {description}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="/categories" class="btn-primary text-base px-6 py-3 bg-white text-gray-900 hover:bg-gray-100">
        {browseCategoriesText}
      </a>
      <a href="/submit" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-md bg-transparent text-white border border-white hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800 transition-colors">
        {submitCompanyText}
      </a>
    </div>
  </div>
</section>

