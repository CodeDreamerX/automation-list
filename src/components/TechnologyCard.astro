---
import type { TechnologyBasic } from '../types/technology';
import { getTechnologyIconUrl } from '../lib/iconUtils';

interface Props {
  technology: TechnologyBasic;
  lang?: string;
  index?: number;
}

const {
  technology,
  lang = "en",
  index = 0,
} = Astro.props;

// Helper function to format slug as readable name
function formatSlugAsName(slug: string): string {
  return slug
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

// Get name and description based on language with fallbacks
const name = lang === "de" 
  ? (technology.name_de || technology.name_en || formatSlugAsName(technology.slug))
  : (technology.name_en || technology.name_de || formatSlugAsName(technology.slug));

const description = lang === "de" 
  ? (technology.description_de || technology.description_en || '')
  : (technology.description_en || technology.description_de || '');

// Build link using slug
const link = `/${lang}/technology/${technology.slug}`;

// Build icon path
const iconPath = getTechnologyIconUrl(technology.icon_name);
---

<a
  href={link}
  class="fade-in-up relative bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-md hover:border-gray-300 transition flex flex-col items-center text-center"
  style={`animation-delay: ${index * 0.05}s`}
>
  {technology.count !== undefined && technology.count > 0 && (
    <span class="absolute top-3 right-3 bg-gray-100 text-gray-700 text-xs font-medium px-2 py-0.5 rounded-full">{technology.count}</span>
  )}
  {iconPath && (
    <div class="flex justify-center mb-4">
      <img src={iconPath} class="w-7 h-7" alt={technology.name_en || name || ""} />
    </div>
  )}
  <h3 class="text-lg font-semibold text-gray-900">{name}</h3>
  {description && (
    <p class="text-sm text-gray-600 mt-2">{description}</p>
  )}
</a>

