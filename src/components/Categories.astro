---
interface Props {
  categories?: Array<{
    name: string;
    slug: string;
    count: number;
  }>;
}

const {
  categories = [
    { name: "PLCs", slug: "plcs", count: 42 },
    { name: "SCADA/HMI", slug: "scada-hmi", count: 38 },
    { name: "Robotics", slug: "robotics", count: 31 },
    { name: "Sensors & IO", slug: "sensors-io", count: 56 },
    { name: "Motion & Drives", slug: "motion-drives", count: 29 },
    { name: "System Integrators", slug: "system-integrators", count: 67 },
  ],
} = Astro.props;
---
<section id="categories" class="py-16 md:py-24 bg-gray-50">
  <div class="container-px mx-auto max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">Categories</h2>
      <div class="mx-auto w-16 h-1 bg-orange-500 rounded-full"></div>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {categories.map((category, index) => (
        <a
          href={`/categories/${category.slug}`}
          class="card hover:shadow-md transition-shadow group relative overflow-hidden"
        >
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 group-hover:text-brand-600 transition-colors">
              {category.name}
            </h3>
            <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${index === 2 || index === 5 ? 'bg-orange-100 text-orange-700' : 'bg-brand-100 text-brand-700'}`}>
              {category.count}
            </span>
          </div>
          <div class={`h-10 w-10 ${index === 2 || index === 5 ? 'bg-orange-100 group-hover:bg-orange-200' : 'bg-brand-100 group-hover:bg-brand-200'} rounded-lg flex items-center justify-center transition-colors`}>
            <svg class={`h-5 w-5 ${index === 2 || index === 5 ? 'text-orange-600' : 'text-brand-600'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          {index === 5 && (
            <div class="absolute top-0 right-0 w-24 h-24 bg-orange-100 rounded-full -mr-12 -mt-12 opacity-30"></div>
          )}
        </a>
      ))}
    </div>
  </div>
</section>

