---
import { getIconUrl } from '../lib/iconUtils';

interface Category {
  slug: string;
  icon_name?: string;
  name_en?: string;
  name_de?: string;
  description_en?: string;
  description_de?: string;
  count?: number;
}

interface Props {
  category: Category;
  lang?: string;
  index?: number;
}

const {
  category,
  lang = "en",
  index = 0,
} = Astro.props;

// Get name and description based on language
const name = lang === "de" ? category.name_de : category.name_en;

const description = lang === "de" ? category.description_de : category.description_en;

// Build link using slug
const link = `/${lang}/category/${category.slug}`;

// Build icon path
const iconPath = getIconUrl(category.icon_name);
---

<a
  href={link}
  class="fade-in-up relative bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-md hover:border-gray-300 transition flex flex-col items-center text-center"
  style={`animation-delay: ${index * 0.05}s`}
>
  {category.count !== undefined && category.count > 0 && (
    <span class="absolute top-3 right-3 bg-gray-100 text-gray-700 text-xs font-medium px-2 py-0.5 rounded-full">{category.count}</span>
  )}
  {iconPath && (
    <div class="flex justify-center mb-4">
      <img src={iconPath} class="w-7 h-7" alt={category.name_en || name || ""} />
    </div>
  )}
  <h3 class="text-lg font-semibold text-gray-900">{name}</h3>
  <p class="text-sm text-gray-600 mt-2">{description}</p>
</a>

