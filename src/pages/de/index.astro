---
import BaseLayout from "../../layouts/BaseLayout.astro";

// German translations
const deNavItems = [
  { label: "Startseite", href: "/de/" },
  { label: "Funktionen", href: "/de/features" },
  { label: "Kategorien", href: "/de/categories" },
  { label: "Anbieter", href: "/de/vendors" },
  { label: "Blog", href: "/de/blog" },
  { label: "Kontakt", href: "/de/contact" },
];

---

<BaseLayout 
  title="Automation List - Demnächst verfügbar"
  description="Entdecken Sie die besten Automatisierungstools und Workflows für Ihre Produktivitätsbedürfnisse."
  lang="de"
  navItems={deNavItems}
>
  <section class="min-h-screen flex items-center justify-center bg-white py-16">
    <div class="container-px mx-auto max-w-2xl text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
        Demnächst verfügbar
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-4">
        Das unabhängige Verzeichnis für Industrieautomatisierung
      </p>
      <p class="text-base md:text-lg text-gray-500 mb-12 max-w-xl mx-auto">
        Melden Sie sich für unsere Warteliste an, um benachrichtigt zu werden.
      </p>
      
      <div class="max-w-2xl mx-auto">
        <div class="ml-embedded" data-form="eOFEpE"></div>
        <p class="text-sm text-gray-400 mt-6">
          Wir senden Ihnen niemals Spam. Sie können sich jederzeit abmelden.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

