---
// Server-Side Rendering (SSR) - This page is rendered on-demand
// See STATIC_GENERATION_STRATEGY.md for details

export const prerender = false;

import BaseLayout from "../../../layouts/BaseLayout.astro";
import VendorCard from "../../../components/VendorCard.astro";
import Pagination from "../../../components/Pagination.astro";
import { supabase } from "../../../lib/supabaseClient";
import { getCached, setCached } from "../../../lib/cache";
import { getTechnologyIconUrl } from "../../../lib/iconUtils";


// Get technology slug from URL param
const techSlug = Astro.params.tech || '';

// If no tech slug, redirect to vendors page
if (!techSlug) {
  return Astro.redirect('/de/vendors');
}

// Fetch technology from database
const { data: technology, error: techError } = await supabase
  .from('technologies')
  .select('id, slug, name_en, name_de, description_en, description_de, icon_name')
  .eq('slug', techSlug)
  .eq('is_active', true)
  .maybeSingle();

if (techError) {
  console.error('Error fetching technology:', techError);
}

// If technology not found in database, use fallback: convert slug to search term
// This allows pages to work even if technologies aren't in the technologies table yet
let techName: string;
let techDescription: string;
let techIconUrl: string;

if (technology) {
  // Technology found in database - use its data
  techName = technology.name_de || technology.name_en || techSlug;
  techDescription = technology.description_de || technology.description_en || '';
  techIconUrl = getTechnologyIconUrl(technology.icon_name);
} else {
  // Fallback: convert slug to readable name (replace hyphens with spaces, title case)
  techName = techSlug
    .replace(/-/g, ' ')
    .split(' ')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase())
    .join(' ');
  techDescription = '';
  techIconUrl = '';
}

// Get pagination params
const page = Math.max(1, parseInt(Astro.url.searchParams.get('page') || '1', 10));
const pageSize = 20;

// Build cache key
const cacheKey = `vendors:technology:de:${techSlug}:${page}`;

// Try to get cached result
interface CachedTechnologyResult {
  vendors: any[];
  totalVendors: number | null;
}

let cachedResult = getCached<CachedTechnologyResult>(cacheKey);
let vendors: any[] = [];
let totalVendors: number | null = null;

if (cachedResult) {
  vendors = cachedResult.vendors || [];
  totalVendors = cachedResult.totalVendors;
} else {
  // Build query for vendors filtered by technology (case-insensitive using ILIKE)
  // Search for vendors that have this technology name in their technologies field
  function buildTechnologyQuery() {
    let query = supabase
      .from('vendors')
      .select(`
        *,
        vendor_categories (
          is_primary,
          categories:categories (
            id,
            slug,
            name_en,
            name_de
          )
        )
      `, { count: 'exact' })
      .neq('plan', 'deactivated');
    
    // Case-insensitive technology filter - search within technologies field
    // Try both German and English names to catch all vendors
    if (technology) {
      // Technology found in database - use its names
      if (technology.name_de && technology.name_en) {
        query = query.or(`technologies.ilike.%${technology.name_de}%,technologies.ilike.%${technology.name_en}%`);
      } else if (technology.name_de) {
        query = query.ilike('technologies', `%${technology.name_de}%`);
      } else if (technology.name_en) {
        query = query.ilike('technologies', `%${technology.name_en}%`);
      }
    } else {
      // Fallback: search by techName (converted from slug)
      query = query.ilike('technologies', `%${techName}%`);
    }
    
    // Order by featured/priority first (high priority first, nulls last), then alphabetically by name
    return query
      .order('priority', { ascending: false, nullsLast: true })
      .order('name', { ascending: true });
  }

  // Get total count - build a separate count query without joins
  let countQuery = supabase
    .from('vendors')
    .select('*', { count: 'exact', head: true })
    .neq('plan', 'deactivated');
  
  // Apply the same technology filter
  if (technology) {
    // Technology found in database - use its names
    if (technology.name_de && technology.name_en) {
      countQuery = countQuery.or(`technologies.ilike.%${technology.name_de}%,technologies.ilike.%${technology.name_en}%`);
    } else if (technology.name_de) {
      countQuery = countQuery.ilike('technologies', `%${technology.name_de}%`);
    } else if (technology.name_en) {
      countQuery = countQuery.ilike('technologies', `%${technology.name_en}%`);
    }
  } else {
    // Fallback: search by techName (converted from slug)
    countQuery = countQuery.ilike('technologies', `%${techName}%`);
  }
  
  const { count } = await countQuery;
  totalVendors = count;

  // Build paginated query
  const start = (page - 1) * pageSize;
  const end = page * pageSize - 1;
  const paginatedQuery = buildTechnologyQuery().range(start, end);

  // Execute paginated query
  const { data, error } = await paginatedQuery;

  if (error) {
    console.error('Error fetching vendors:', error);
    vendors = [];
  } else {
    vendors = data || [];
  }

  // Cache the result
  if (totalVendors !== null) {
    setCached(cacheKey, { vendors, totalVendors }, 300);
  }
}

// Normalize category data shape
const normalizedVendors = (vendors || []).map(v => ({
  ...v,
  category_slugs: v.vendor_categories?.map((vc: any) => vc.categories?.slug).filter(Boolean) || []
}));

const totalPages = Math.ceil((totalVendors || 0) / pageSize);

// SEO metadata
const metaTitle = `Top ${techName} Automatisierungsunternehmen | Automation List`;
const metaDescription = techDescription || `Finden Sie die besten Industrieautomatisierungsunternehmen, Systemintegratoren und SCADA/PLC-Experten, die sich auf ${techName} spezialisiert haben. Durchsuchen Sie verifizierte Automatisierungsanbieter weltweit.`;
const origin = Astro.url.origin;
const defaultOgImage = `${origin}/og/default.png`;
const fullUrl = `https://automation-list.com/de/technology/${techSlug}`;

---

<BaseLayout 
  title={metaTitle}
  description={metaDescription}
  canonical={fullUrl}
  ogImage={defaultOgImage}
  lang="de"
>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": `Automatisierungsunternehmen für ${techName}`,
    "itemListElement": normalizedVendors.map((v, index) => ({
      "@type": "Organization",
      "position": index + 1,
      "name": v.name,
      "url": `https://automation-list.com/de/vendor/${v.slug}`,
      "logo": v.logo_url,
      "image": v.logo_url,
      "address": v.country
    }))
  }, null, 2)} />
  <div class="container-px mx-auto max-w-7xl px-4 py-10">
    <!-- Technology Header -->
    <div class="mb-8">
      <div class="flex items-center gap-4 mb-4">
        {techIconUrl && (
          <img 
            src={techIconUrl} 
            alt={techName}
            class="w-16 h-16"
          />
        )}
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">
            {techName}
          </h1>
          {techDescription && (
            <p class="text-gray-600 text-base">
              {techDescription}
            </p>
          )}
        </div>
      </div>
    </div>

    <!-- Result Count -->
    <div class="mb-4">
      <p class="text-sm text-gray-600">
        {totalVendors || 0} {totalVendors === 1 ? 'Anbieter' : 'Anbieter'} gefunden
        {totalPages > 1 && (
          <span class="text-xs text-gray-500 ml-2">
            (Seite {page} von {totalPages})
          </span>
        )}
      </p>
    </div>

    <!-- Vendor Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {normalizedVendors.length > 0 ? (
        normalizedVendors.map(vendor => (
          <VendorCard
            vendor={vendor}
            hrefPrefix="/de/vendor"
            lang="de"
          />
        ))
      ) : (
        <div class="col-span-full text-center py-12">
          <p class="text-gray-600">
            Noch keine Anbieter für diese Technologie vorhanden.
          </p>
        </div>
      )}
    </div>

    <!-- Pagination -->
    <Pagination
      currentPage={page}
      totalPages={totalPages}
      baseUrl={Astro.url}
      lang="de"
    />
  </div>
</BaseLayout>

