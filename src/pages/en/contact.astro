---
export const prerender = false;

import BaseLayout from "../../layouts/BaseLayout.astro";

const engNavItems = [
  { label: "Home", href: "/en/" },
  { label: "Categories", href: "/en/categories" },
  { label: "Vendors", href: "/en/vendors" },
  { label: "Blog", href: "/en/blog" },
  { label: "Contact", href: "/en/contact" },
];
---

<BaseLayout 
  title="Contact - Automation List"
  description="Get in touch with Automation List for questions, submissions, or partnership inquiries."
  lang="en"
  navItems={engNavItems}
>
  <section class="py-16 md:py-24 bg-white">
    <div class="container-px mx-auto max-w-3xl">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Contact Us
        </h1>
        <p class="text-lg text-gray-700 leading-relaxed">
          Have questions or want to submit your company? We'd love to hear from you.
        </p>
      </div>
      
      <div class="card">
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">
          Get in Touch
        </h2>
        <p class="text-gray-600 mb-6">
          For general inquiries, company submissions, or partnership opportunities, please reach out to us.
        </p>
        <p class="text-gray-600">
          Contact form coming soon.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>