---
// Server-Side Rendering (SSR) - This page is rendered on-demand
// See STATIC_GENERATION_STRATEGY.md for details

export const prerender = false;

import BaseLayout from "../../../layouts/BaseLayout.astro";
import VendorCard from "../../../components/VendorCard.astro";
import Pagination from "../../../components/Pagination.astro";
import { supabase } from "../../../lib/supabaseClient";
import { getCached, setCached } from "../../../lib/cache";
import { getTechnologyIconUrl } from "../../../lib/iconUtils";
import { normalizeVendors } from "../../../lib/vendors/vendorUtils";


// Get technology slug from URL param
const techSlug = Astro.params.tech || '';

// If no tech slug, redirect to vendors page
if (!techSlug) {
  return Astro.redirect('/en/vendors');
}

// Fetch technology from database
const { data: technology, error: techError } = await supabase
  .from('technologies')
  .select('id, slug, name_en, name_de, description_en, description_de, icon_name')
  .eq('slug', techSlug)
  .eq('is_active', true)
  .maybeSingle();

if (techError) {
  console.error('Error fetching technology:', techError);
}

// If technology not found in database, use fallback: convert slug to search term
// This allows pages to work even if technologies aren't in the technologies table yet
let techName: string;
let techDescription: string;
let techIconUrl: string;

if (technology) {
  // Technology found in database - use its data
  techName = technology.name_en || technology.name_de || techSlug;
  techDescription = technology.description_en || technology.description_de || '';
  techIconUrl = getTechnologyIconUrl(technology.icon_name);
} else {
  // Fallback: convert slug to readable name (replace hyphens with spaces, title case)
  techName = techSlug
    .replace(/-/g, ' ')
    .split(' ')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase())
    .join(' ');
  techDescription = '';
  techIconUrl = '';
}

// Get pagination params
const page = Math.max(1, parseInt(Astro.url.searchParams.get('page') || '1', 10));
const pageSize = 20;

// Build cache key
const cacheKey = `vendors:technology:en:${techSlug}:${page}`;

// Try to get cached result
interface CachedTechnologyResult {
  vendors: any[];
  totalVendors: number | null;
}

let cachedResult = getCached<CachedTechnologyResult>(cacheKey);
let vendors: any[] = [];
let totalVendors: number | null = null;

if (cachedResult) {
  vendors = cachedResult.vendors || [];
  totalVendors = cachedResult.totalVendors;
} else {
  // Get vendor IDs that have this technology via vendor_technologies
  let techVendorIds: string[] = [];
  if (technology) {
    // Technology found in database - get vendors linked to this technology
    const { data: techLinks } = await supabase
      .from('vendor_technologies')
      .select('vendor_id')
      .eq('technology_id', technology.id);
    
    if (techLinks) {
      techVendorIds = techLinks.map(link => link.vendor_id);
    }
  } else {
    // Fallback: search by techName in technology names
    const { data: matchingTechs } = await supabase
      .from('technologies')
      .select('id')
      .or(`name_en.ilike.%${techName}%,name_de.ilike.%${techName}%`)
      .eq('is_active', true);
    
    if (matchingTechs && matchingTechs.length > 0) {
      const techIds = matchingTechs.map(t => t.id);
      const { data: techLinks } = await supabase
        .from('vendor_technologies')
        .select('vendor_id')
        .in('technology_id', techIds);
      
      if (techLinks) {
        techVendorIds = techLinks.map(link => link.vendor_id);
      }
    }
  }
  
  // Build query function
  function buildTechnologyQuery() {
    let query = supabase
      .from('vendors')
      .select(`
        *,
        vendor_categories (
          is_primary,
          categories:categories (
            id,
            slug,
            name_en,
            name_de
          )
        )
      `, { count: 'exact' })
      .neq('plan', 'deactivated');
    
    if (techVendorIds.length === 0) {
      // No vendors match this technology, return empty result
      query = query.eq('id', '00000000-0000-0000-0000-000000000000');
    } else {
      query = query.in('id', techVendorIds);
    }
    
    // Order by featured/priority first (high priority first, nulls last), then alphabetically by name
    return query
      .order('priority', { ascending: false, nullsFirst: false })
      .order('name', { ascending: true });
  }

  // Get total count - use the same vendor IDs from technology filter
  let countQuery = supabase
    .from('vendors')
    .select('*', { count: 'exact', head: true })
    .neq('plan', 'deactivated');
  
  if (techVendorIds.length === 0) {
    countQuery = countQuery.eq('id', '00000000-0000-0000-0000-000000000000');
  } else {
    countQuery = countQuery.in('id', techVendorIds);
  }
  
  const { count } = await countQuery;
  totalVendors = count;

  // Build paginated query
  const start = (page - 1) * pageSize;
  const end = page * pageSize - 1;
  const paginatedQuery = buildTechnologyQuery().range(start, end);

  // Execute paginated query
  const { data, error } = await paginatedQuery;

  if (error) {
    console.error('Error fetching vendors:', error);
    vendors = [];
  } else {
    vendors = data || [];
  }

  // Cache the result
  if (totalVendors !== null) {
    setCached(cacheKey, { vendors, totalVendors }, 300);
  }
}

// Normalize category data shape
const normalizedVendors = normalizeVendors(vendors || []);

const totalPages = Math.ceil((totalVendors || 0) / pageSize);

// SEO metadata
const metaTitle = `${techName} Industrial Automation Companies | Automation List`;
const metaDescription = (techDescription && techDescription.trim()) || `Find the best industrial automation companies, system integrators, and SCADA/PLC experts specializing in ${techName}. Browse verified automation vendors worldwide.`;
const origin = Astro.url.origin;
const defaultOgImage = `${origin}/og/default.png`;
const fullUrl = `https://automation-list.com/en/technology/${techSlug}`;

// Build breadcrumbs
const breadcrumbs = [
  { label: "Home", href: "/en/" },
  { label: "Technologies", href: "/en/technologies" },
  { label: techName, href: `/en/technology/${techSlug}` },
];

---

<BaseLayout 
  title={metaTitle}
  description={metaDescription}
  canonical={fullUrl}
  ogImage={defaultOgImage}
  breadcrumbs={breadcrumbs}
  lang="en"
>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": `${techName} Industrial Automation Companies`,
    "itemListElement": normalizedVendors.map((v, index) => ({
      "@type": "Organization",
      "position": index + 1,
      "name": v.name,
      "url": `https://automation-list.com/en/vendor/${v.slug}`,
      "logo": v.logo_url,
      "image": v.logo_url,
      "address": v.country
    }))
  }, null, 2)} />
  <div class="container-px mx-auto max-w-7xl px-4 py-10">
    <!-- Technology Header -->
    <div class="mb-8">
      <div class="flex items-center gap-4 mb-4">
        {techIconUrl && (
          <img 
            src={techIconUrl} 
            alt={techName}
            class="w-16 h-16"
          />
        )}
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">
            {techName}
          </h1>
          {techDescription && (
            <p class="text-gray-600 text-base">
              {techDescription}
            </p>
          )}
        </div>
      </div>
    </div>

    <!-- Result Count -->
    <div class="mb-4">
      <p class="text-sm text-gray-600">
        {totalVendors || 0} {totalVendors === 1 ? 'vendor' : 'vendors'} found
        {totalPages > 1 && (
          <span class="text-xs text-gray-500 ml-2">
            (Page {page} of {totalPages})
          </span>
        )}
      </p>
    </div>

    <!-- Vendor Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {normalizedVendors.length > 0 ? (
        normalizedVendors.map(vendor => (
          <VendorCard
            vendor={vendor}
            hrefPrefix="/en/vendor"
            lang="en"
          />
        ))
      ) : (
        <div class="col-span-full text-center py-12">
          <p class="text-gray-600">
            No vendors for this technology yet.
          </p>
        </div>
      )}
    </div>

    <!-- Pagination -->
    <Pagination
      currentPage={page}
      totalPages={totalPages}
      baseUrl={Astro.url}
      lang="en"
    />
  </div>
</BaseLayout>

