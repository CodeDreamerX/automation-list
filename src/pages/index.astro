<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Redirectingâ€¦</title>
    <meta name="robots" content="noindex" />
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        background: #fff;
      }
    </style>
    <script>
      (function () {
        try {
          const host = window.location.hostname;
          const redirectToGerman = /\.ch$/.test(host);
          const target = redirectToGerman ? '/de/' : '/en/';
          if (window.location.pathname !== target) {
            window.location.replace(target);
          }
        } catch (err) {
          window.location.replace('/en/');
        }
      })();
    </script>
    <noscript>
      <meta http-equiv="refresh" content="0; url=/en/" />
    </noscript>
  </head>
  <body></body>
</html>
