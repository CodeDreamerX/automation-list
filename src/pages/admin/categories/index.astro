---
export const prerender = false;

import { supabase } from '../../../lib/supabaseClient';
import { protectAdminRoute } from '../../../lib/admin/authUtils';
import AdminLayout from '../../../components/admin/AdminLayout.astro';
import { getIconUrl } from '../../../lib/iconUtils';

// Check authentication and redirect if not logged in
const redirectResponse = await protectAdminRoute(Astro.cookies, Astro.locals);
if (redirectResponse) {
  return redirectResponse;
}

// Fetch all categories from Supabase
const { data: categories } = await supabase
  .from("categories")
  .select("*")
  .order("order_index");
---

<AdminLayout title="Categories - Admin Panel" currentPath="/admin/categories">
  <h1 class="text-2xl font-bold mb-6">Categories</h1>
  
  <a href="/admin/categories/new" class="btn-primary">New Category</a>

  <table class="w-full mt-4">
    <thead>
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Icon</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Slug</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Active</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      {categories && categories.length > 0 ? (
        categories.map(cat => {
          const iconUrl = getIconUrl(cat.icon_name);
          return (
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                {iconUrl ? (
                  <img src={iconUrl} alt={cat.name_en || ''} class="w-6 h-6" />
                ) : (
                  <span class="text-gray-400">â€”</span>
                )}
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">{cat.name_en || '-'}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">{cat.slug || '-'}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">{cat.is_active ? "Yes" : "No"}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <a 
                  href={`/admin/categories/edit/${cat.id}`}
                  class="text-black hover:text-gray-700 px-3 py-1 rounded-md hover:bg-gray-100 transition-colors"
                >
                  Edit
                </a>
              </td>
            </tr>
          );
        })
      ) : (
        <tr>
          <td colspan="5" class="px-6 py-8 text-center text-sm text-gray-500">
            No categories found.
          </td>
        </tr>
      )}
    </tbody>
  </table>
</AdminLayout>

