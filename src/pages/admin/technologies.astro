---
export const prerender = false;

import { supabase } from '../../lib/supabaseClient';
import { protectAdminRoute } from '../../lib/admin/authUtils';
import AdminLayout from '../../components/admin/AdminLayout.astro';
import { getTechnologyIconUrl } from '../../lib/iconUtils';

// Check authentication and redirect if not logged in
const redirectResponse = await protectAdminRoute(Astro.locals);
if (redirectResponse) {
  return redirectResponse;
}

// Fetch all technologies from Supabase
const { data: technologies, error } = await supabase
  .from('technologies')
  .select('id, slug, name_en, name_de, icon_name, order_index, is_active')
  .order('order_index', { ascending: true });

if (error) {
  console.error('Error fetching technologies:', error);
}

---

<AdminLayout title="Technology Management - Admin Panel" currentPath="/admin/technologies">
  <div class="space-y-6">
    <!-- HEADER -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Technology Management</h1>
        <p class="mt-1 text-sm text-gray-600">
          Manage all technologies in the Automation List directory
        </p>
      </div>
      <div class="flex items-center gap-4">
        <div class="text-sm text-gray-600">
          Total: {technologies?.length || 0} technologies
        </div>
        <a
          href="/admin/technologies/new"
          class="px-4 py-2 bg-black text-white rounded-md hover:bg-gray-900 transition-colors text-sm font-medium"
        >
          + New Technology
        </a>
      </div>
    </div>

    <!-- TECHNOLOGIES TABLE -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Icon
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Name
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Slug
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Order
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Active
              </th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {technologies && technologies.length > 0 ? (
              technologies.map((technology) => {
                const displayName = technology.name_en || technology.name_de || '-';
                const bilingualName = technology.name_en && technology.name_de 
                  ? `${technology.name_en} / ${technology.name_de}`
                  : displayName;
                const iconUrl = getTechnologyIconUrl(technology.icon_name);
                
                return (
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      {iconUrl ? (
                        <img 
                          src={iconUrl} 
                          alt={displayName} 
                          class="w-8 h-8"
                          onerror="this.style.display='none'; this.nextElementSibling?.remove(); this.insertAdjacentHTML('afterend', '<div class=\\'flex items-center justify-center w-8 h-8 text-gray-400 text-xs\\'>—</div>');"
                        />
                      ) : (
                        <div class="flex items-center justify-center w-8 h-8 text-gray-400 text-xs">—</div>
                      )}
                    </td>
                    <td class="px-6 py-4">
                      <div class="text-sm font-medium text-gray-900">{displayName}</div>
                      {technology.name_en && technology.name_de && (
                        <div class="text-xs text-gray-500">{technology.name_de}</div>
                      )}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900">{technology.slug || '-'}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900">{technology.order_index ?? '-'}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900">
                        {technology.is_active ? (
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            Active
                          </span>
                        ) : (
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            Inactive
                          </span>
                        )}
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <div class="flex items-center justify-end gap-2">
                        <a
                          href={`/admin/technologies/edit/${technology.id}`}
                          class="text-black hover:text-gray-700 px-3 py-1 rounded-md hover:bg-gray-100 transition-colors"
                        >
                          Edit
                        </a>
                        <button
                          type="button"
                          class="text-red-600 hover:text-red-800 px-3 py-1 rounded-md hover:bg-red-50 transition-colors"
                          disabled
                          title="Delete action not implemented yet"
                        >
                          Delete
                        </button>
                      </div>
                    </td>
                  </tr>
                );
              })
            ) : (
              <tr>
                <td colspan="6" class="px-6 py-8 text-center text-sm text-gray-500">
                  No technologies found.
                </td>
              </tr>
            )}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</AdminLayout>

