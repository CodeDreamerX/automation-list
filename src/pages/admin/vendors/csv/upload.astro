---
export const prerender = false;

import { protectAdminRoute } from '../../../../lib/admin/authUtils';
import AdminLayout from '../../../../components/admin/AdminLayout.astro';
import { writeFile, mkdir } from 'fs/promises';
import { join } from 'path';
import { randomUUID } from 'crypto';

// Check authentication and redirect if not logged in
const redirectResponse = await protectAdminRoute(Astro.locals);
if (redirectResponse) {
  return redirectResponse;
}

// Handle file upload
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const file = formData.get('csvFile') as File | null;

  if (!file) {
    return Astro.redirect('/admin/vendors/csv/upload?error=no_file');
  }

  // Validate file type
  if (!file.name.endsWith('.csv') && file.type !== 'text/csv' && file.type !== 'application/vnd.ms-excel') {
    return Astro.redirect('/admin/vendors/csv/upload?error=invalid_file_type');
  }

  // Validate file size (e.g., max 10MB)
  const maxSize = 10 * 1024 * 1024; // 10MB
  if (file.size > maxSize) {
    return Astro.redirect('/admin/vendors/csv/upload?error=file_too_large');
  }

  if (file.size === 0) {
    return Astro.redirect('/admin/vendors/csv/upload?error=empty_file');
  }

  // Read file content
  const fileContent = await file.text();

  // Generate a unique session ID for this upload
  const sessionId = randomUUID();

  // Store file in temporary directory
  try {
    const tempDir = join(process.cwd(), '.temp', 'csv-uploads');
    await mkdir(tempDir, { recursive: true });
    
    const tempFilePath = join(tempDir, `${sessionId}.csv`);
    await writeFile(tempFilePath, fileContent, 'utf-8');

    // Store session ID and filename in cookies for the preview page
    Astro.cookies.set('csv_upload_session', sessionId, {
      httpOnly: true,
      secure: Astro.url.protocol === 'https:',
      sameSite: 'strict',
      maxAge: 60 * 10, // 10 minutes
      path: '/',
    });

    Astro.cookies.set('csv_upload_filename', file.name, {
      httpOnly: true,
      secure: Astro.url.protocol === 'https:',
      sameSite: 'strict',
      maxAge: 60 * 10, // 10 minutes
      path: '/',
    });

    // Redirect to preview page
    return Astro.redirect('/admin/vendors/csv/preview');
  } catch (error) {
    console.error('Error storing uploaded file:', error);
    return Astro.redirect('/admin/vendors/csv/upload?error=storage_error');
  }
}

// Check for error messages
const error = Astro.url.searchParams.get('error');
let errorMessage = '';
if (error === 'no_file') {
  errorMessage = 'Please select a CSV file to upload.';
} else if (error === 'invalid_file_type') {
  errorMessage = 'Invalid file type. Please upload a CSV file (.csv).';
} else if (error === 'file_too_large') {
  errorMessage = 'File is too large. Maximum file size is 10MB.';
} else if (error === 'empty_file') {
  errorMessage = 'The uploaded file is empty. Please select a valid CSV file.';
} else if (error === 'storage_error') {
  errorMessage = 'An error occurred while storing the file. Please try again.';
}
---

<AdminLayout title="CSV Upload - Admin Panel" currentPath="/admin/vendors/csv">
  <div class="space-y-6">
    <!-- HEADER -->
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Upload CSV File</h1>
        <p class="mt-1 text-sm text-gray-600">
          Select a CSV file containing vendor data to import
        </p>
      </div>
      <a
        href="/admin/vendors/csv"
        class="text-sm text-gray-600 hover:text-gray-900"
      >
        ← Back to CSV Import
      </a>
    </div>

    <!-- ERROR MESSAGE -->
    {errorMessage && (
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <p class="text-sm text-red-700">{errorMessage}</p>
      </div>
    )}

    <!-- UPLOAD FORM -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <form method="POST" enctype="multipart/form-data" class="space-y-6">
        <div>
          <label for="csvFile" class="block text-sm font-medium text-gray-700 mb-2">
            CSV File
          </label>
          <input
            type="file"
            id="csvFile"
            name="csvFile"
            accept=".csv,text/csv"
            required
            class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-brand-500 file:text-white hover:file:bg-brand-600 file:cursor-pointer border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent"
          />
          <p class="mt-2 text-xs text-gray-500">
            Select a CSV file. Maximum file size: 10MB. The file will be validated and parsed on the next step.
          </p>
        </div>

        <div class="flex items-center gap-4 pt-4 border-t border-gray-200">
          <button
            type="submit"
            class="btn-primary"
          >
            Upload and Continue to Preview
          </button>
          <a
            href="/admin/vendors/csv"
            class="btn-secondary"
          >
            Cancel
          </a>
        </div>
      </form>
    </div>

    <!-- FILE REQUIREMENTS -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <h3 class="text-sm font-semibold text-gray-900 mb-2">File Requirements</h3>
      <ul class="text-xs text-gray-600 space-y-1">
        <li>• File must be in CSV format (.csv extension)</li>
        <li>• Maximum file size: 10MB</li>
        <li>• File must contain valid CSV data with headers</li>
        <li>• Ensure your CSV file uses UTF-8 encoding</li>
      </ul>
    </div>
  </div>
</AdminLayout>

